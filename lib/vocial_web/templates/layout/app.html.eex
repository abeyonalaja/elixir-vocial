<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <title>Vocial - The Social Voting App!</title>
    <link href="<%= static_path(@conn, "/css/app.css") %>" rel="stylesheet"/>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <h4>Logo</h4>
      </header>

      <p role="alert" class="alert alert-info"><%= get_flash(@conn, :info) %></p>
      <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>


      <main role="main">
        <%= render @view_module, @view_template, assigns %>
      </main>

    </div> <!-- /Container -->
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
