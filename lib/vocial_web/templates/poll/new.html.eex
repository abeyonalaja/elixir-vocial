<div class="poll-form">
  <h2>New Poll</h2>
  <%= form_for @poll, poll_path(@conn, :create), fn f -> %>
  <label for=""> Title: <br />
    <%= text_input f, :title %>
  </label>
  <br />
  <label for="">
    Options (separated by commas) :<br />
    <input type="text" name="options" />
  </label>
  <br/>
  <%=  submit "Create" %>
  <% end %>
</div>
